<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login for Workout Tracker</title>
    <link rel="stylesheet" href="css/style.css">
    <!--  Google Fonts - Work Sans -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com"> 
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- End Google Fonts -->
</head>
<body>
    <section id="bodySection" style='display: block'>
        <div id="glowStick" class="card card-body" style="justify-content: center;">
            <h1 id="zazz">Workout Tracker Login</h1>
            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <% if (locals.messages.info) { %>
                <% messages.info.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <form action="/login" method="POST">
                <input type="email" name="email" placeholder="Email">
                <input type="password" name="password" placeholder="Password">
                <div class="buttonStack">
                    <!-- <input class='cookieButton' type="submit"> -->
             
                    <button type="submit" class="cookieButton" style="box-shadow: 0px 0px 18px #000;">Submit</button>
                   
                    
                </div>
               
            </form>
            <div class="buttonStack">
                <%- include('./partials/home.ejs') %>
                <%- include('./partials/registerButton.ejs') %>
            </div>
            <div class="buttonStack">
                <%- include('./partials/revokeCookiePerms.ejs') %>
            </div>
           
         
          

        </div>
</section>

    <%- include('./partials/cookieBanner.ejs') %>
</body>
</html>